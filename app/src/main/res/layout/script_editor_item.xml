<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="line"
            type="com.stevedenheyer.scriptassistant.scripteditor.ScriptLineRecyclerItemView" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/line_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:text="@{Integer.toString(line.index)}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/line_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:text="@{line.text}"
        app:layout_constraintStart_toEndOf="@+id/line_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>